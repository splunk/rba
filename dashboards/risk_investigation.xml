        </search>
        <option name="count">10</option>
        <format type="color" field="threat_object">
          <colorPalette type="list">[#a7c4f2]</colorPalette>
        </format>
        <fields>["_time","source","risk_message","threat_object"]</fields>
        <drilldown>
          <set token="threat_token">$click.value2$</set>
